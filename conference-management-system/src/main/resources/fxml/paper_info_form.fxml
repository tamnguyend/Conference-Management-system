<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="controller.UploadPaperController"
          fx:id="gridPanePaper"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          hgap="10" vgap="10">

    <!-- Add Header Label -->
    <Label text="Paper Information" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <font>
            <Font name="Arial" size="24"></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>
    <!-- Add Email Label -->
    <Label text="Title : " GridPane.columnIndex="0"
           GridPane.rowIndex="2"></Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="titleField" prefHeight="40" GridPane.columnSpan="2"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <!-- Add Password Label -->
    <Label text="Abstract : " GridPane.columnIndex="0"
           GridPane.rowIndex="3"></Label>
    <!-- Add Password Field -->
    <TextField fx:id="abstractField" prefHeight="40" prefWidth="50" GridPane.columnSpan="2"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Keyword : " GridPane.columnIndex="0"
           GridPane.rowIndex="4"></Label>
    <TextField fx:id="keywordField" prefHeight="40" prefWidth="50" GridPane.columnSpan="2"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text="Subject : " GridPane.columnIndex="0"
           GridPane.rowIndex="5"></Label>
    <TextField fx:id="subjectField" prefHeight="40" prefWidth="50" GridPane.columnSpan="2"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Label text="Associate Author : " GridPane.columnIndex="0"
           GridPane.rowIndex="6"></Label>
    <TextField fx:id="associateAuthors" prefHeight="40" prefWidth="50" GridPane.columnSpan="2"
               GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <!-- Add Submit Button -->
    <Button fx:id="uploadPaper" text="Upload Paper"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="7"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="LEFT"
            onAction="#upload">
    </Button>
    <!-- Add Submit Button -->
    <Button text="Cancel"
            cancelButton="true"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="7"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#cancel">
    </Button>
</GridPane>